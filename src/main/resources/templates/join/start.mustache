<body class="bg_secondary">
    <!--회원가입 폼 시작-->
    <div class="box_position m_xg_1 p_xg_1">
        <div class="jf_color bg_primary p_xg_1">
            <!--로고 이미지 시작-->
            <div class="box_position mb_md_1">
                <img class="logoim" src="/img/common/DMarket_logo.png" alt="logo">
